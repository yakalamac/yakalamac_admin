{% extends 'partner/base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('plugins/datatable/css/dataTables.bootstrap5.min.css') }}">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css">
{% endblock %}


{% block body %}

	{{ dump(order) }}
	{# Order Top #}
	<div class="card">
		<div class="card-body">
			<div class="d-flex flex-lg-row flex-column align-items-start align-items-lg-center justify-content-between gap-3">
				<div class="flex-grow-1">
					<h4 class="fw-bold">Sipariş No:
						<span id="orderId" style="color: #00B8C0;">{{ order.id }}</span>
					</h4>
				</div>
			</div>
		</div>
	</div>
	{# Order Top End #}

	{# Order Body #}
	<div class="row">
		<div class="col-12 col-lg-8 d-flex">
			<div class="card w-100">
				<div class="card-body">
					<h5 class="mb-3 fw-bold">Ürünler<span class="fw-light ms-2"></span>
					</h5>
					<div class="product-table">
						<div class="table-responsive white-space-nowrap">
							<table class="table align-middle">
								<thead class="table-light">
									<tr>
										<th>Ürün</th>
										<th>Adet</th>
										<th>Fiyat</th>
										<th>Toplam:</th>
									</tr>
								</thead>
								<tbody>
									{% for item in order.items %}
										<tr>
											<td>
												<div class="d-flex align-items-center gap-3">
													<div class="product-box">
														<img src="https://cdn.shortpixel.ai/spai/q_glossy+w_336+to_webp+ret_img/global-sensors.com/wp-content/uploads/2021/07/test.jpg" width="70" class="rounded-3" alt="">
													</div>
													<div class="product-info">
														<a href="javascript:;" class="product-title">api tarafı isim</a>
														<p class="mb-0 product-category">{{ item.productDescription }}</p>
														<!-- -->
													</div>
												</div>
											</td>
											<td>{{ item.quantity }}</td>
											<td>{{ item.unitPrice }}₺</td>
											<td>{{ item.unitPrice * item.quantity }}₺</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
					<div class="d-flex align-items-center justify-content-end">
						<p class="mb-0 me-2 fw-bold">Toplam Fiyat:</p>
						<p class="mb-0 me-2 fw-bold">{{ order.grandTotal }}₺</p>
					</div>

				</div>
			</div>
		</div>
		<div class="col-12 col-lg-4 d-flex">
			<div class="w-100">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title mb-4 fw-bold">Sipariş Notu:</h4>
						<div>
							<div class="d-flex justify-content-between">
								<p class="fw-semi-bold">{{ order.orderDescription }}</p>
							</div>

						</div>
					</div>
				</div>

				<div class="card">
					<div class="card-body">
						<div class="d-flex justify-content-between align-items-center mb-4">
							<h4 class="card-title fw-bold mb-0">Sipariş Durumu</h4>

							{% set statusClass = '' %}
							{% set statusText = '' %}

							{% if order.status == 'pending' %}
									{% set statusClass = 'lable-table bg-warning-subtle text-warning border-warning-subtle font-text2 fw-bold' %}
									{% set statusText = 'Bekleniyor' %}
							{% elseif order.status == 'accepted' %}
									{% set statusClass = 'lable-table bg-info-subtle text-info border-info-subtle font-text2 fw-bold' %}
									{% set statusText = 'Onaylandı' %}
							{% elseif order.status == 'rejected' %}
									{% set statusClass = 'lable-table bg-danger-subtle text-danger border-danger-subtle font-text2 fw-bold' %}
									{% set statusText = 'Reddedildi' %}
							{% elseif order.status == 'preparing' %}
									{% set statusClass = 'lable-table bg-warning-subtle text-warning border-warning-subtle font-text2 fw-bold' %}
									{% set statusText = 'Hazırlanıyor' %}
							{% elseif order.status == 'ready' %}
									{% set statusClass = 'lable-table bg-success-subtle text-success border-success-subtle font-text2 fw-bold' %}
									{% set statusText = 'Hazır' %}
							{% elseif order.status == 'delivery' %}
									{% set statusClass = 'lable-table bg-primary-subtle text-primary border-primary-subtle font-text2 fw-bold' %}
									{% set statusText = 'Teslimatta' %}
							{% elseif order.status == 'delivered' %}
									{% set statusClass = 'lable-table bg-success-subtle text-success border-success-subtle font-text2 fw-bold' %}
									{% set statusText = 'Teslim Edildi' %}
							{% elseif order.status == 'cancelled_user' %}
									{% set statusClass = 'lable-table bg-secondary-subtle text-secondary border-secondary-subtle font-text2 fw-bold' %}
									{% set statusText = 'Kullanıcı İptal Etti' %}
							{% elseif order.status == 'cancelled_business' %}
									{% set statusClass = 'lable-table bg-secondary-subtle text-secondary border-secondary-subtle font-text2 fw-bold' %}
									{% set statusText = 'İşletme İptal Etti' %}
							{% endif %}

							<!-- Durum bildirgesi buton stiliyle -->
							<div id="statusBox" class="btn btn-sm {{ statusClass }}">
								{{ statusText }}
							</div>
						</div>
						<label class="form-label">Sipariş Durumunu Güncelle</label>
						<select id="orderStatus" class="form-select">
							<option value="preparing">Hazırlanıyor</option>	
							<option value="ready">Hazır</option>
							<option value="delivery">Teslimatta</option>
							<option value="delivered">Teslim Edildi</option>
							<option value="rejected">İptal Et</option>
						</select>

						<div class="text-end mt-3">
							<button id="updateOrderStatusBtn" type="button" class="btn btn-primary">Güncelle</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	{# Order Body End #}

	{# Order Bottom #}
	<h5 class="fw-bold mb-4">Sipariş Bilgileri</h5>
	<div class="card">
	
		<div class="card-body">
			<div class="row g-3 row-cols-1 row-cols-lg-4">
				<div class="col">
					<div class="d-flex align-items-start gap-3 border p-3 rounded">
						<div class="detail-icon fs-5">
							<i class="bi bi-person-circle"></i>
						</div>
						<div class="detail-info">
							<p class="fw-bold mb-1">Siparişi Veren</p>
							<a href="javascript:;" class="mb-0">{{ user.yakalaRegistration.username }}</a>
						</div>
					</div>
				</div>

				<div class="col">
					<div class="d-flex align-items-start gap-3 border p-3 rounded">
						<div class="detail-icon fs-5">
							<i class="bi bi-envelope-fill"></i>
						</div>
						<div class="detail-info">
							<h6 class="fw-bold mb-1">Email</h6>
							<a href="javascript:;" class="mb-0">{{ user.email }}</a>
						</div>
					</div>
				</div>

				<div class="col">
					<div class="d-flex align-items-start gap-3 border p-3 rounded">
						<div class="detail-icon fs-5">
							<i class="bi bi-telephone-fill"></i>
						</div>
						<div class="detail-info">
							<h6 class="fw-bold mb-1">Telefon Numarası</h6>
							<a href="javascript:;" class="mb-0">{{ user.mobilePhone ?? 'numara yok' }}</a>
						</div>
					</div>
				</div>

				<div class="col">
					<div class="d-flex align-items-start gap-3 border p-3 rounded">
						<div class="detail-icon fs-5">
							<i class="bi bi-calendar-check-fill"></i>
						</div>
						<div class="detail-info">
							<h6 class="fw-bold mb-1">Sipariş Tarihi</h6>
							<p class="mb-0">{{ order.items[0].createdAt }}</p>
						</div>
					</div>
				</div>

				<div class="col">
					<div class="d-flex align-items-start gap-3 border p-3 rounded">
						<div class="detail-icon fs-5">
							<i class="bi bi-house-door-fill"></i>
						</div>
						<div class="detail-info">
							<h6 class="fw-bold mb-1">Adres</h6>
							<p class="mb-0">{{ user.yakalaRegistration.addresses[0] ?? 'adres bulunamadı' }}</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	{# Order Bottom End #}

{% endblock %}


{% block javascripts %}
	<script src="{{ asset('plugins/datatable/js/jquery.dataTables.min.js') }}"></script>
	<script src="{{ asset('plugins/datatable/js/dataTables.bootstrap5.min.js') }}"></script>
	<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
	<script src="{{ asset('plugins/select2/js/select2-custom.js') }}"></script>
	<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js" async defer></script>

	<script type="module" src="{{ asset('script/partner/order/order.js') }}"></script>
{% endblock %}
