{% extends 'partner/base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('plugins/select2/css/select2.min.css') }}">
	<link rel="stylesheet" href="{{ asset('plugins/select2/css/select2-bootstrap-4.css') }}">
	<link rel="stylesheet" href="{{ asset('plugins/select2/css/select2-bootstrap-5-theme.min.css') }}">
	<link href="{{ asset('plugins/fancy-file-uploader/fancy_fileupload.css') }}" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
	<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
	<style>
		/* Modern design styles */
		.card {
			border-radius: 0.75rem;
			border: none;
			box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
			transition: all 0.3s ease;
			margin-bottom: 1.5rem;
		}

		.card:hover {
			box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
		}

		.card-body {
			padding: 1.5rem;
		}

		.text-primary {
			color: #00b7c0 !important;
		}

		.btn {
			border-radius: 0.5rem;
			font-weight: 500;
			transition: all 0.3s ease;
			padding: 0.5rem 1.25rem;
		}

		.btn-primary {
			background-color: #00b7c0;
			border-color: #00b7c0;
		}

		.btn-primary:hover,
		.btn-primary:focus {
			background-color: #009da5;
			border-color: #009da5;
			transform: translateY(-2px);
			box-shadow: 0 4px 8px rgba(0, 183, 192, 0.2);
		}

		.btn-outline-primary {
			color: #00b7c0;
			border-color: #00b7c0;
		}

		.btn-outline-primary:hover,
		.btn-outline-primary:focus {
			background-color: #00b7c0;
			color: white;
			transform: translateY(-2px);
			box-shadow: 0 4px 8px rgba(0, 183, 192, 0.2);
		}

		.btn-outline-danger:hover,
		.btn-outline-danger:focus {
			transform: translateY(-2px);
			box-shadow: 0 4px 8px rgba(220, 53, 69, 0.2);
		}

		.form-control,
		.form-select {
			border-radius: 0.5rem;
			padding: 0.6rem 1rem;
			border-color: #e9ecef;
			transition: all 0.3s ease;
		}

		.form-control:focus,
		.form-select:focus {
			border-color: #00b7c0;
			box-shadow: 0 0 0 0.25rem rgba(0, 183, 192, 0.25);
		}

		.nav-pills .nav-link {
			border-radius: 0.5rem;
			padding: 0.75rem 1.25rem;
			margin-right: 0.5rem;
			color: #495057;
			font-weight: 500;
			transition: all 0.3s ease;
		}

		.nav-pills .nav-link.active {
			background-color: #00b7c0;
			color: white;
			box-shadow: 0 4px 8px rgba(0, 183, 192, 0.2);
		}

		.nav-pills .nav-link:hover:not(.active) {
			background-color: #f8f9fa;
			transform: translateY(-2px);
		}

		.page-breadcrumb {
			background-color: white;
			border-radius: 0.75rem;
			padding: 1rem 1.5rem;
			margin-bottom: 1.5rem;
			box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
		}

		.breadcrumb-item a {
			color: #00b7c0;
			text-decoration: none;
		}

		.breadcrumb-title {
			font-weight: 600;
			color: #343a40;
		}

		h5 {
			color: #343a40;
			font-weight: 600;
			margin-bottom: 1rem;
		}

		.form-label {
			font-weight: 500;
			color: #495057;
		}

		.tab-content {
			padding: 0.5rem;
		}

		/* Form field styles */
		.required-field::after {
			content: "*";
			color: #dc3545;
			margin-left: 4px;
		}

		.form-section {
			margin-bottom: 2rem;
		}

		.form-section-title {
			font-size: 1.1rem;
			font-weight: 600;
			color: #00b7c0;
			margin-bottom: 1rem;
			padding-bottom: 0.5rem;
			border-bottom: 1px solid #e9ecef;
		}

		.option-item {
			background-color: #f8f9fa;
			border-radius: 0.5rem;
			padding: 1rem;
			margin-bottom: 1rem;
			border-left: 3px solid #00b7c0;
		}

		/* Helper text */
		.helper-text {
			font-size: 0.85rem;
			color: #6c757d;
			margin-top: 0.25rem;
		}
	</style>
{% endblock %}

{% block body %}
	<!--breadcrumb-->
	<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-4 shadow-sm">
		<div class="breadcrumb-title pe-3">Ürün</div>
		<div class="ps-3">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb mb-0 p-0">
					<li class="breadcrumb-item">
						<a href="/partner/products">
							<i class="bi bi-box-seam me-1"></i>Ürünler</a>
					</li>
					<li class="breadcrumb-item active" aria-current="page">Yeni Ürün Ekle</li>
				</ol>
			</nav>
		</div>
	</div>
	<!--end breadcrumb-->

	<div class="row">
		<div class="col-12">
			<div class="card shadow-sm">
				<div class="card-body">
					<h5 class="card-title mb-4">Yeni Ürün Bilgileri</h5>

					<form id="product-form">
						<div class="row">
							<div
								class="col-lg-8">
								<!-- Basic Information -->
								<div class="form-section">
									<div class="form-section-title">Temel Bilgiler</div>

									<div class="mb-3">
										<label for="product-name" class="form-label required-field">Ürün Adı</label>
										<input type="text" class="form-control" id="product-name" name="pname" placeholder="Ürün adını girin" required>
										<div class="helper-text">Müşterilerin ürününüzü kolayca bulabilmesi için açıklayıcı bir isim girin.</div>
									</div>

									<div class="mb-3">
										<label for="product-description" class="form-label">Ürün Açıklaması</label>
										<textarea class="form-control" id="product-description" name="description" rows="4" placeholder="Ürün açıklaması girin"></textarea>
										<div class="helper-text">Ürününüzün özelliklerini ve avantajlarını açıklayın.</div>
									</div>

									<div class="mb-3">
										<label for="product-price" class="form-label required-field">Ürün Fiyatı</label>
										<div class="input-group">
											<span class="input-group-text bg-light">₺</span>
											<input type="text" class="form-control" id="product-price" name="pprice" placeholder="0.00" required>
										</div>
										<div class="helper-text">Vergiler dahil son fiyatı girin.</div>
									</div>
								</div>

								<!-- Dictionary Section -->
								<div class="form-section">
									<div class="form-section-title">Sözlük</div>

									<div class="mb-3">
										<label for="dictionary" class="form-label">Sözlük Eşleştirmesi</label>
										<select name="dictionary" aria-label="dictionary" class="form-select" id="dictionary" data-auto-select2="true" data-adapter="dictionary_adapter" data-source="dictionary" data-declaration="dictionary" data-placeholder="İlgili ürünü arayın"></select>
										<div class="helper-text">
											Filtre ve arama sonuçlarında daha iyi eşleşme için ürününüzü
											<a class="fw-bold text-primary" href="/delivery-conditions" target="_blank">Yakala Sözlüğü</a>
											içeriklerinden uygun olan ile eşleştirin. 
																																																																													Hedef kitlenizin ürününüzü bulmasını kolaylaştırır.
										</div>
									</div>
								</div>

								<!-- Product Options -->
								<div class="form-section">
									<div class="form-section-title d-flex justify-content-between align-items-center">
										<span>Ürün Seçenekleri</span>
										<button type="button" class="btn btn-sm btn-outline-primary" id="add-option-btn">
											<i class="bi bi-plus-circle me-1"></i>Seçenek Ekle
										</button>
									</div>

									<div
										id="options-container">
										<!-- Options will be added here dynamically -->
										<div class="text-center py-4 bg-light rounded-3 mb-3">
											<p class="text-muted mb-2">Henüz seçenek eklenmemiş</p>
											<p class="small text-muted">Ürününüz için boyut, renk gibi seçenekler ekleyebilirsiniz</p>
										</div>
									</div>
								</div>
							</div>

							<div
								class="col-lg-4">
								<!-- Categories & Tags -->
								<div class="card shadow-sm mb-4">
									<div class="card-body">
										<h5 class="mb-3">Kategoriler & Etiketler</h5>

										<div class="mb-3">
											<label for="category" class="form-label required-field">Kategori</label>
											<select class="form-select" name="category" id="category" multiple data-auto-select2="true" data-declaration="category" data-adapter="description_adapter" data-source="product_category" data-placeholder="Kategori seçin" required></select>
											<div class="helper-text">Ürününüzün ait olduğu kategoriyi seçin.</div>
										</div>

										<div class="mb-3">
											<label for="types" class="form-label">Tür</label>
											<select name="types[]" id="types" class="form-select" multiple data-auto-select2="true" data-declaration="type" data-adapter="description_adapter" data-source="product_type" data-placeholder="Tür seçin"></select>
											<div class="helper-text">Ürün türünü belirtin.</div>
										</div>

										<div class="mb-3">
											<label for="tags" class="form-label">Etiketler</label>
											<select name="tags[]" id="tags" class="form-control" multiple data-auto-select2="true" data-declaration="hashtag" data-adapter="tag_adapter" data-source="product_tag" data-placeholder="Etiket seçin"></select>
											<div class="helper-text">Ürününüzü tanımlayan etiketleri ekleyin.</div>
										</div>
									</div>
								</div>

								<!-- Actions -->
								<div class="card shadow-sm">
									<div class="card-body">
										<div class="d-grid gap-2">
											<button onclick="window.dispatchEvent(new Event('pushproduct'))" type="button" class="btn btn-primary">
												<i class="bi bi-check-circle me-2"></i>Ürünü Yayınla
											</button>
											<button onclick="window.location.href='/partner/products';" type="button" class="btn btn-outline-secondary">
												<i class="bi bi-x-circle me-2"></i>İptal
											</button>
										</div>
									</div>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>

	<!-- Option Template Modal -->
	<div class="modal fade" id="option-modal" tabindex="-1" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content border-0 shadow">
				<div class="modal-header">
					<h5 class="modal-title">Seçenek Ekle</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="mb-3">
						<label for="option-name" class="form-label">Seçenek Adı</label>
						<input type="text" class="form-control" id="option-name" placeholder="Örn: Boyut, Renk, Malzeme">
					</div>

					<div class="mb-3">
						<label for="option-values" class="form-label">Seçenek Değerleri</label>
						<input type="text" class="form-control" id="option-values" placeholder="Değerleri virgülle ayırın: Küçük, Orta, Büyük">
						<div class="helper-text">Virgülle ayırarak birden fazla değer girebilirsiniz.</div>
					</div>

					<div class="form-check form-switch">
						<input class="form-check-input" type="checkbox" id="option-required">
						<label class="form-check-label" for="option-required">Zorunlu seçenek</label>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
					<button type="button" class="btn btn-primary" id="save-option-btn">Ekle</button>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('plugins/select2/js/select2.min.js') }}"></script>
	<script src="{{ asset('plugins/fancy-file-uploader/jquery.ui.widget.js') }}"></script>
	<script src="{{ asset('plugins/fancy-file-uploader/jquery.fileupload.js') }}"></script>
	<script src="{{ asset('plugins/fancy-file-uploader/jquery.iframe-transport.js') }}"></script>
	<script src="{{ asset('plugins/fancy-file-uploader/jquery.fancy-fileupload.js') }}?v=1"></script>
	<script type="module" src="{{ asset('script/partner/product/add.js') }}"></script>
	<script>
		// Handle product options
document.addEventListener('DOMContentLoaded', function () {
const addOptionBtn = document.getElementById('add-option-btn');
const saveOptionBtn = document.getElementById('save-option-btn');
const optionsContainer = document.getElementById('options-container');
let optionModal;

// Initialize Bootstrap modal
addOptionBtn.addEventListener('click', function () {
optionModal = new bootstrap.Modal(document.getElementById('option-modal'));
optionModal.show();
});

// Save option
saveOptionBtn.addEventListener('click', function () {
const optionName = document.getElementById('option-name').value.trim();
const optionValues = document.getElementById('option-values').value.trim();
const isRequired = document.getElementById('option-required').checked;

if (optionName && optionValues) { // Clear placeholder if it's the first option
if (optionsContainer.querySelector('.text-center')) {
optionsContainer.innerHTML = '';
}

// Create option element
const optionEl = document.createElement('div');
optionEl.className = 'option-item';

const values = optionValues.split(',').map(v => v.trim());
const valuesList = values.map(v => `<span class="badge bg-light text-dark me-1 mb-1">${v}</span>`).join('');

optionEl.innerHTML = `
						<div class="d-flex justify-content-between align-items-start mb-2">
							<div>
								<h6 class="mb-1">${optionName} ${
isRequired ? '<span class="badge bg-danger ms-1">Zorunlu</span>' : ''
}</h6>
								<div>${valuesList}</div>
							</div>
							<button type="button" class="btn btn-sm btn-outline-danger remove-option">
								<i class="bi bi-trash"></i>
							</button>
						</div>
					`;

// Add remove functionality
optionEl.querySelector('.remove-option').addEventListener('click', function () {
optionEl.remove();

// Show placeholder if no options left
if (optionsContainer.children.length === 0) {
optionsContainer.innerHTML = `
								<div class="text-center py-4 bg-light rounded-3 mb-3">
									<p class="text-muted mb-2">Henüz seçenek eklenmemiş</p>
									<p class="small text-muted">Ürününüz için boyut, renk gibi seçenekler ekleyebilirsiniz</p>
								</div>
							`;
}
});

optionsContainer.appendChild(optionEl);

// Reset and close modal
document.getElementById('option-name').value = '';
document.getElementById('option-values').value = '';
document.getElementById('option-required').checked = false;
optionModal.hide();
}
});
});
	</script>
{% endblock %}
