{% extends 'partner/base.html.twig' %}

{% block title %}Partner Dashboard{% endblock %}
{% set active = app.request.cookies.get('_active_place')|default(null) %}
{% set activeDecoded = active|json_decode %}
{% set activePlaceId = activeDecoded.pid|default(null) %}

{% block body %}
	<div class="page-wrapper">
		<div class="page-content">

			<div class="row g-4">
				<div class="col-12 col-xxl-8">
					<div class="card rounded-4 overflow-hidden h-100">
						<div class="card-body p-4 d-flex flex-column flex-lg-row align-items-center gap-4">
							<div class="flex-grow-1">
								<div class="d-flex align-items-center gap-3 mb-4">
									<img src="https://cdn.yaka.la/assets/web/logo-removebg.png" class="rounded-circle border p-1" width="60" height="60" alt="avatar"/>
									<div>
										<p class="text-muted small mb-1">Hoş geldin</p>
										<h4 class="fw-semibold m-0">{{ app.user.fullName }}</h4>
									</div>
								</div>

								<div class="row g-4">
									<div class="col-6 text-center text-lg-start">
										<h4 id="todayRevenue" class="fw-semibold mb-1">₺0</h4>
										<p class="text-muted small mb-0">Bugünkü Ciro</p>
									</div>
									<div class="col-6 text-center text-lg-start">
										<h4 id="todayOrderCount" class="fw-semibold mb-1">0</h4>
										<p class="text-muted small mb-0">Bugünkü Sipariş</p>
									</div>
									<div class="col-6 text-center text-lg-start">
										<h6 id="weekRevenue" class="fw-semibold mb-1">₺0</h6>
										<p class="text-muted small mb-0">7 Günlük Ciro</p>
									</div>
									<div class="col-6 text-center text-lg-start">
										<h6 id="weekOrders" class="fw-semibold mb-1">0</h6>
										<p class="text-muted small mb-0">7 Günlük Sipariş</p>
									</div>
								</div>

								<p id="comparisonMsg" class="small mt-3 mb-0"></p>
							</div>
							<img src="https://cdn.yaka.la/assets/web/partner/index/welcome-back-3.png" class="d-none d-lg-block img-fluid" style="max-height:160px" alt="welcome"/>
						</div>
					</div>
				</div>

				<div class="col-12 col-xxl-4">
					<a href="#" class="text-decoration-none">
						<div class="card rounded-4 overflow-hidden h-100">
							<img src="https://cdn.yaka.la/assets/web/partner/index/partner-kampanya.png" class="w-100 h-100 object-fit-contain" style="max-height:280px" alt="kampanya"/>
						</div>
					</a>
				</div>
			</div>

			<div class="card rounded-4 mt-4">
				<div class="card-header py-3"><h5 class="fw-semibold mb-0">Son 7 Gün İstatistikleri</h5></div>
				<div class="card-body">
					<div class="row g-4">
						<div class="col-12 col-lg-8"><div id="weeklyChart" style="height:220px;"></div></div>
						<div class="col-12 col-lg-4">
							<div class="d-flex align-items-center gap-2 mb-2"><h2 id="successRate" class="mb-0">0%</h2><span class="text-muted">başarı oranı</span></div>
							<ul class="list-group" id="statusList"></ul>
						</div>
					</div>
					<div class="table-responsive mt-4">
						<h6>Son 7 gün içinde en çok sipariş edilen ürünleriniz</h6>
						<table class="table" id="topProductsTable">
							<thead class="table-light"><tr><th>Ürün</th><th>Adet</th><th>Gelir</th></tr></thead>
							<tbody></tbody>
						</table>
					</div>
				</div>
			</div>

			<div class="card rounded-4 mt-4">
				<div class="card-header py-3"><h5 class="fw-semibold mb-0">Bugünün Siparişleri</h5></div>
				<div class="table-responsive">
					<table class="table align-middle" id="todayOrdersTable">
						<thead class="table-light"><tr><th>#</th><th>Müşteri</th><th>Tutar</th><th>Durum</th></tr></thead>
						<tbody><tr><td colspan="4" class="text-center text-muted">Yükleniyor…</td></tr></tbody>
					</table>
				</div>
			</div>

		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>window.activePlaceId='{{ activePlaceId }}';</script>
	<script type="module" src="{{ asset('script/partner/base/dashboard.js') }}"></script>
{% endblock %}