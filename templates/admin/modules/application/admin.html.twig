{% if application is not defined or application is null %}
    <button> EKLE </button>
{% else %}
    <div class="mb-4">
        <label for="multiple-select-custom-field" class="form-label">Admin Yetkileri</label>
        <select class="form-select" id="multiple-select-custom-field" data-placeholder="Choose anything" multiple>
            {% for role in roles %}
                <option value="{{ role.name }}" id="{{ role.id }}"
                        title="{{ role.description }}"
                        {% if role.name in application.roles|default([]) %}selected{% endif %}>
                    {{ role.name }}
                </option>
            {% endfor %}
        </select>

        <label for="multiple-select-custom-field" class="form-label">Tercih Edilen Diller</label>
        <select class="form-select" id="multiple-select-custom-field" data-placeholder="Choose anything" multiple>
            {% for lang in application.preferredLanguages|default([]) %}
                <option value="{{ lang }}">{{ lang }}</option>
            {% endfor %}
        </select>
    </div>
{% endif %}