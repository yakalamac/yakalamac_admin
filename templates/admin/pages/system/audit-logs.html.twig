{% extends 'admin/base.html.twig' %}

{% block title %}Kullanıcı Logları{% endblock %}

{% block body %}
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Sistem</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item active" aria-current="page">Kullanıcı Logları</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-3 navbar navbar-expand-lg navbar-dark bg-grd-info rounded shadow-lg p-3 rounded m-1 text-light">
        <div class="col-md-4">
            <label for="startDate" class="form-label">Başlangıç Tarihi</label>
            <input type="date" id="startDate" class="form-control" placeholder="Başlangıç Tarihi">
        </div>
        <div class="col-md-4">
            <label for="endDate" class="form-label">Bitiş Tarihi</label>
            <input type="date" id="endDate" class="form-control" placeholder="Bitiş Tarihi">
        </div>
        <div class="col-md-4">
            <label for="action" class="form-label">İşlem</label>
            <select id="action" class="form-control">
                <option value="">Hepsi</option>
                <option value="DELETE">Silme</option>
                <option value="PATCH">Güncelleme</option>
                <option value="POST">Ekleme</option>
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="auditLogsTable" class="table table-striped table-bordered" style="width:100%" data-ajax-url="{{ path('admin_audit_logs_data') }}">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Kullanıcı</th>
                                    <th>Entity ID</th>
                                    <th>Entity Türü</th>
                                    <th>İşlem</th>
                                    <th>Tarih</th>
                                    <th>Detay</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade detailModal" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detailModalLabel">Log Detayları</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    <pre id="logDetails" style="white-space: pre-wrap;"></pre>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('/script/pages/admin/audit-logs.js?v2') }}"></script>
{% endblock %}