{% extends 'admin/base.html.twig' %}

{% block title %}İşletme kategorileri
{% endblock %}

{% block javascripts %}

<script>
  $(document).ready(function() {
    $('#placesTable').DataTable({
        "processing": true,
        "serverSide": true,
        "ajax": {
            "url": "/api/places",
            "data": function (d) {
                d.page = Math.ceil(d.start / d.length) + 1;
            },
            "dataSrc": "hydra:member"
        },
          "columns": [
            { "data": "name" },
            { 
                "data": "updatedAt",
                "render": function(data) {
                    return moment(data).format('DD/MM/YYYY - HH:mm'); 
                }
            }
        ],
        "pageLength": 15,
        "lengthMenu": [15, 25, 50, 100],     
    });
});

</script>
{% endblock %}


{% block body %}

	<h1>İşletmeler</h1>

	<div class="card">
		<div class="card-body">
			<div class="table-responsive">
				<table id="placesTable" class="table table-striped table-bordered">
					<thead>
						<tr>
							<th>İşletme Adı</th>
							<th>Güncelleme tarihi</th>
						</tr>
					</thead>
					<tbody>
					</tbody>
				</table>
			</div>
		</div>
	</div>

{% endblock %}
