{% extends 'admin/base.html.twig' %}

{% block title %}İşletme kategorileri
{% endblock %}

{% block javascripts %}

    <script>
        $(document).ready(function () {
            $('#placesTable').DataTable(
                {
                    processing: true,
                    serverSide: true,
                    ajax: {
                        url: "/api/places",
                        data: function (d) {
                            d.page = Math.ceil(d.start / d.length) + 1;
                        },
                        dataSrc: "hydra:member"
                    },
                    columns: [
                        {
                            data: "id",
                            render: function (data){
                                return `<a title="${data}">${data.slice(0, 5)}...</a>`;
                            }
                        },
                        {
                            data: "name"
                        },
                        {
                            data: "owner",

                            render: function (data) {
                                return `
                                    <div class="form-check form-switch form-check-success">
                                        <input class="form-check-input" type="checkbox" role="switch" ${data ? 'checked' : ''}>
                                    </div>`;
                            }
                        },
                        {
                            data: "address",
                            render: function (data){
                                return data && data.shortAddress ? data.shortAddress : '';
                            }
                        },
                        {
                            data: "updatedAt",
                            render: function (data) {
                                return moment(data).format('DD/MM/YYYY - HH:mm');
                            }
                        },
                        {
                            data: "createdAt",
                            render: function (data) {
                                return moment(data).format('DD/MM/YYYY - HH:mm');
                            }
                        }
                    ],
                    pageLength: 15,
                    lengthMenu: [15, 25, 50, 100],
                }
            );
        });

    </script>
{% endblock %}


{% block body %}
    <style>
        .success-icon {
            color: green;
            font-size: 40px;
        }

        .error-icon {
            color: red;
            font-size: 40px;
        }
    </style>
    <h1>İşletmeler</h1>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="placesTable" class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>İşletme Adı</th>
                        <th>Sahipli mi</th>
                        <th>Adres</th>
                        <th>Güncelleme tarihi</th>
                        <th>Eklenme Tarihi</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}