{% extends 'admin/base.html.twig' %}

{% block title %}Tüm İşletmeler{% endblock %}

{% block body %}
<div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
    <nav aria-label="breadcrumb" class="mb-0">
        <ol class="breadcrumb mb-0 p-0">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
            <li class="breadcrumb-item active" aria-current="page">Tüm İşletmeler</li>
        </ol>
    </nav>
    <a href="{{ path('place_add') }}" class="btn btn-grd btn-success btn-sm">İşletme Ekle</a>
</div>

<div class="card">
    <div class="card-header">
        <div class="container-fluid px-0">
            <div class="row justify-content-center g-2">
                <div class="col-12 col-sm-4 col-md-3">
                    <select id="province_select" class="form-select" aria-label="Provinces"
                            data-filter="CITY" data-placeholder="İl seçilmedi"></select>
                </div>
                <div class="col-12 col-sm-4 col-md-3">
                    <select id="district_select" class="form-select" aria-label="Districts"
                            data-filter="DISTRICT" data-placeholder="İlçe seçilmedi"></select>
                </div>
                <div class="col-12 col-sm-4 col-md-2">
                    <button id="filterButton" class="btn btn-primary w-100">Getir</button>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="places" class="table table-striped table-bordered">
                <thead class="text-center">
                    <tr>
                        <th class="text-center">Temel</th>
                        <th class="text-center">İşletme</th>
                        <th class="text-center">Adres</th>
                        <th class="text-center">Güncellendi</th>
                        <th class="text-center">Şehir</th>
                        <th class="text-center">İlçe</th>
                        <th  class="text-center">İşlem</th>
                    </tr>
                </thead>
                <tbody class="text-center"></tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('script/modules/address-bundle/index.js') }}"></script>
    <script type="module" src="{{ asset('script/admin/place/index.js?v9') }}"></script>
{% endblock %}