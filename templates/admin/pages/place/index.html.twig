{% extends 'admin/base.html.twig' %}

{% block title %}Tüm İşletmeler{% endblock %}

{% block body %}
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">İşletmeler</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="javascript:void(0)"></a></li>
                <li class="breadcrumb-item active" aria-current="page">Tüm İşletmeler</li>
            </ol>
        </nav>
    </div>
    <a href="{{ path('place_add') }}" class="right2 btn btn-grd btn-grd-success">İşletme Ekle</a>
</div>

<div class="card">
    <div class="card-header d-flex">
        <div class="col-6 row g-2">
            <div class="col mb-3">
                <select id="province_select" class="form-select fixed-width" aria-label="Provinces"
                        data-filter="CITY" data-placeholder="İl seçilmedi"></select>
            </div>
            <div class="col mb-3">
                <select id="district_select" class="form-select fixed-width" aria-label="Districts"
                        data-filter="DISTRICT" data-placeholder="İlçe seçilmedi"></select>
            </div>
            <div class="col mb-3">
                <button id="filterButton" class="btn btn-primary fixed-width">Getir</button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="places" class="table table-striped table-bordered">
                <thead class="text-center">
                    <tr>
                        <th>Temel</th>
                        <th>İşletme</th>
                        <th>Adres</th>
                        <th>Güncellendi</th>
                        <th>Şehir</th>
                        <th>İlçe</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('/script/modules/bundles/address-bundle/index.js') }}"></script>
    <script type="module" src="{{ asset('/script/pages/place/index.js?v9') }}"></script>
{% endblock %}