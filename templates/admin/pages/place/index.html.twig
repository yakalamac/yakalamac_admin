{% extends 'admin/base.html.twig' %}

{% block title %}Tüm İşletmeler{% endblock %}

{% block body %}
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">İşletmeler</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="javascript:void(0)"></a> </li>
                <li class="breadcrumb-item active" aria-current="page">Tüm İşletmeler</li>
            </ol>
        </nav>
    </div>
    <a href="{{ path('app_admin_place_add') }}" disabled class="right2 btn btn-grd btn-grd-success" >Yeni İşletme Ekle</a>
</div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
            <div class="d-flex" style="width: fit-content; margin-right: 0px; margin-left: auto;">
                <select id="cityFilter" class="form-select">
                    <option value="">Tüm Şehirler</option>
                    <option value="İzmir">İzmir</option>
                    <option value="Ankara">Ankara</option>
                    <option value="Aydın">Aydın</option>
                    <option value="İstanbul">İstanbul</option>
                    <option value="Manisa">Manisa</option>
                    <option value="Denizli">Denizli</option>
                    <option value="Balıkesir">Balıkesir</option>
                    <option value="Afyonkarahisar">Afyonkarahisar</option>
                    <option value="Kütahya">Kütahya</option>
                    <option value="Konya">Konya</option>
                </select>
            </div>

                <table id="placesTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>İşletme Adı</th>
                            <th>Öncelikli Tip</th>
                            <th>Sahipli mi</th>
                            <th>Adres</th>
                            <th>Güncelleme tarihi</th>
                            <th>Eklenme Tarihi</th>
                            <th>Şehir</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('/script/pages/place/index.js?v4') }}"></script>
{% endblock %}