{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('#adminUsersTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '{{ path('admin_users_data') }}',
                    type: 'POST',
                    dataType: "json"
                },
                columns: [
                    { data: 'id' , orderable: false},
                ],
        lengthMenu: [15, 25, 50, 100],
        pageLength: 15,
            });
        });
    </script>
{% endblock %}
