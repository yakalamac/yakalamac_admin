{% extends 'admin/base.html.twig' %}

{% block title %}Kullan覺c覺lar{% endblock %}

{% block body %}
    <h1>Kullan覺c覺lar</h1>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="adminUsersTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>UUID</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
