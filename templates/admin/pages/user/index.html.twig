{% block javascripts %}
    <script src="{{ asset('assets/plugins/ajax/toastr/js/toastr.min.js') }}"></script>
    {% if user_type_description == 'Admin' %}
        <script type="module" src="{{ asset('script/pages/users/admin/index.js') }}"></script>
