{% extends 'admin/base.html.twig' %}

{% block body %}
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Profiliniz</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="javascript:void(0)">
                            <i class="bx bx-home-alt"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Admin</li>
                </ol>
            </nav>
        </div>
        <div class="ms-auto">
            <div class="btn-group">
                <button type="button" class="btn btn-primary">Ayarlar</button>
                <button type="button" class="btn btn-primary split-bg-primary dropdown-toggle dropdown-toggle-split"
                        data-bs-toggle="dropdown"><span class="visually-hidden">Toggle Dropdown</span>
                </button>
                <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end"><a class="dropdown-item"
                                                                                       href="javascript:void(0)">Action</a>
                    <a class="dropdown-item" href="javascript:void(0)">Another action</a>
                    <a class="dropdown-item" href="javascript:void(0)">Something else here</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="javascript:void(0)">Separated link</a>
                </div>
            </div>
        </div>
    </div>
    <!--end breadcrumb-->


    <div class="card rounded-4">
        <div class="card-body p-4">
            <div class="position-relative mb-5">
                <img src="https://cdn.yaka.la/assets/web/logo.jpg" class="img-fluid rounded-4 shadow text-center"
                     alt="Yakalamaç">
                <div class="profile-avatar position-absolute top-100 start-50 translate-middle">
                    <img src="{{ user.imageUrl|default('https://cdn.yaka.la/assets/web/yakalamac-icon.jpg') }}"
                         class="img-fluid rounded-circle p-1 bg-grd-danger shadow" width="170" height="170" alt="">
                </div>
            </div>
            <div class="profile-info pt-5 d-flex align-items-center justify-content-between">
                <div class="">
                    <h3>{{ user.firstName|default('') }} {{ user.lastName|default('') }}</h3>
                    <p class="mb-0">Engineer at BB Agency Industry<br>
                        New York, United States</p>
                </div>
                <div class="">
                    <a href="javascript:void(0)" class="btn btn-grd btn-grd-primary rounded-5 px-4">
                        <i class="bi bi-chat me-2"></i>Mesaj Gönder</a>
                </div>
            </div>
            <div class="kewords d-flex align-items-center gap-3 mt-4 overflow-x-auto">
                <button type="button" class="btn btn-sm btn-light rounded-5 px-4">UX Research</button>
                <button type="button" class="btn btn-sm btn-light rounded-5 px-4">CX Strategy</button>
                <button type="button" class="btn btn-sm btn-light rounded-5 px-4">Management</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-xl-8">
            <div class="card rounded-4 border-top border-4 border-primary border-gradient-1">
                <div class="card-body p-4">
                    <div class="d-flex align-items-start justify-content-between mb-3">
                        <div class="">
                            <h5 class="mb-0 fw-bold">Profili Düzenle</h5>
                        </div>
                        <div class="dropdown">
                            <a href="javascript:void(0)" class="dropdown-toggle-nocaret options dropdown-toggle"
                               data-bs-toggle="dropdown">
                                <span class="material-icons-outlined fs-5">more_vert</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="javascript:void(0)">Action</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0)">Another action</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0)">Something else here</a></li>
                            </ul>
                        </div>
                    </div>
                    <form class="row g-4" id="profile-basics-form">
                        <div class="col-md-6">
                            <label for="firstName" class="form-label">Adınız</label>
                            <input type="text" class="form-control" id="firstName" name="firstName"
                                   placeholder="Bu alanı güncelleyin" value="{{ user.firstName|default('') }}">
                        </div>
                        <div class="col-md-6">
                            <label for="lastName" class="form-label">Soyadınız</label>
                            <input type="text" class="form-control" id="lastName" name="lastName"
                                   placeholder="Bu alanı güncelleyin" value="{{ user.lastName|default('') }}">
                        </div>
                        <div class="col-md-12">
                            <label for="mobilePhone" class="form-label">Telefon Numaranız</label>
                            {% if 'ROLE_ADMIN_VERIFIED' in user.roles or 'ROLE_ADMIN_MOBILE_PHONE_VERIFIED' in user.roles %}
                                <span class="badge bg-grd-success">Doğrulandı <i class="lni lni-checkmark"></i></span>
                            {% else %}
                                <span class="badge bg-grd-danger cursor-pointer validate-button" data-type="mobilePhone" data-value="{{ user.mobilePhone|default('') }}">Doğrulanmadı <i class="lni lni-close"></i></span>
                            {% endif %}
                            <input type="text" class="form-control" id="mobilePhone" name="mobilePhone"
                                   placeholder="Bu alanı güncelleyin" value="{{ user.mobilePhone|default('') }}">
                        </div>
                        <div class="col-md-12">
                            <label for="email" class="form-label">E-posta Adresiniz</label>
                            {% if 'ROLE_ADMIN_VERIFIED' in user.roles or 'ROLE_ADMIN_EMAIL_VERIFIED' in user.roles %}
                                <span class="badge bg-grd-success">Doğrulandı <i class="lni lni-checkmark"></i></span>
                            {% else %}
                                <span class="badge bg-grd-danger cursor-pointer validate-button" data-type="email" data-value="{{ user.email|default('') }}">Doğrulanmadı <i class="lni lni-close"></i></span>
                            {% endif %}
                            <input type="email" class="form-control" id="email" name="email"
                                   placeholder="Bu alanı güncelleyin" value="{{ user.email|default('') }}">
                        </div>
                        {#                        <div class="col-md-12"> #}
                        {#                            <label for="input5" class="form-label">Password</label> #}
                        {#                            <input type="password" class="form-control" id="input5"> #}
                        {#                        </div> #}
                        <div class="col-md-12">
                            <label for="birthdate" class="form-label">Doğum Tarihiniz</label>
                            <input type="date" class="form-control" id="birthdate" name="birthDate"
                                   placeholder="Bu alanı güncelleyin" value="{{ user.birthDate|default('') }}">
                        </div>
                        {#
                        <div class="col-md-12">
                            <label for="input7" class="form-label">Uyruk</label>
                            <select id="input7" class="form-select">
                                <option selected="">Choose...</option>
                                <option>One</option>
                                <option>Two</option>
                                <option>Three</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label for="city" class="form-label">Şehir</label>
                            <input type="text" class="form-control" id="city" placeholder="Bu alanı güncelleyin">
                        </div>
                        <div class="col-md-4">
                            <label for="state" class="form-label">Bölge/İlçe</label>
                            <select id="state" class="form-select">
                                <option selected="">Choose...</option>
                                <option>One</option>
                                <option>Two</option>
                                <option>Three</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="postcode" class="form-label">Zip/Posta Kodu</label>
                            <input type="text" class="form-control" id="postcode" placeholder="Bu alanı güncelleyin">
                        </div>
                        #}
                        <div class="col-md-12">
                            <label for="address-detail" class="form-label">Açık Adres</label>
                            <textarea class="form-control" id="address-detail" placeholder="Address ..."
                                      name="adress-detail" rows="4" cols="4">{{ user|json_encode }}</textarea>
                        </div>
                        <div class="col-md-12">
                            <div class="d-md-flex d-grid align-items-center gap-3">
                                <button type="submit" class="btn btn-grd btn-grd-voilet px-4">Profili Güncelle</button>
                                <button type="button" class="btn btn-grd btn-grd-danger px-4 d-flex gap-2">Hesabımı Sil</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-12 col-xl-4">
            <div class="card rounded-4">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between mb-3">
                        <div class="">
                            <h5 class="mb-0 fw-bold">Hakkında</h5>
                        </div>
                        <div class="dropdown">
                            <a href="javascript:void(0)" class="dropdown-toggle-nocaret options dropdown-toggle"
                               data-bs-toggle="dropdown">
                                <span class="material-icons-outlined fs-5">more_vert</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="javascript:void(0)">Action</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0)">Another action</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0)">Something else here</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="full-info">
                        <div class="info-list d-flex flex-column gap-3">
                            <div class="info-list-item d-flex align-items-center gap-3"><span
                                        class="material-icons-outlined">account_circle</span>
                                <p class="mb-0">
                                    {{ user.firstName|default('') }} {{ user.lastName|default('') }}
                                </p></div>
                            <div class="info-list-item d-flex align-items-center gap-3"><span
                                        class="material-icons-outlined">done</span>
                                <p class="mb-0">
                                    {% if 'ROLE_ADMIN_VERIFIED' in user.roles %}Aktif{% elseif 'ROLE_ADMIN_MOBILE_PHONE_VERIFIED' in user.roles %}Hesabınızı aktifleştirmek için e-posta adresinizi doğrulayın.{% elseif 'ROLE_ADMIN_EMAIL_VERIFIED' in user.roles %}Hesabınızı aktifleştirmek için telefon numaranızı doğrulayın.{% else %}Hesabınızı aktifleştirmek için telefon numaranızı ve e-posta adresinizi doğrulayın.{% endif %}
                                </p>
                            </div>
                            <div class="info-list-item d-flex align-items-center gap-3"><span
                                        class="material-icons-outlined">code</span>
                                <p class="mb-0">Role: Admin</p></div>
                            <div class="info-list-item d-flex align-items-center gap-3"><span
                                        class="material-icons-outlined">flag</span>
                                <p class="mb-0">Country: USA</p></div>
                            <div class="info-list-item d-flex align-items-center gap-3"><span
                                        class="material-icons-outlined">language</span>
                                <p class="mb-0">Tercih Edilen Dil: Türkçe</p></div>
                            {% if user.email is defined %}
                                <div class="info-list-item d-flex align-items-center gap-3"><span
                                            class="material-icons-outlined">send</span>
                                    <p class="mb-0">Email: {{ user.email }}</p></div>
                            {% endif %}
                            {% if user.mobilePhone is defined %}
                                <div class="info-list-item d-flex align-items-center gap-3"><span
                                            class="material-icons-outlined">call</span>
                                    <p class="mb-0">Telefon Numarası: {{ user.mobilePhone }}</p></div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="card rounded-4">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between mb-3">
                        <div class="card-header">
                            <h5 class="mb-0 fw-bold">Bağlı Hesaplar</h5>
                        </div>
                        <div class="dropdown">
                            <a href="javascript:void(0)" class="dropdown-toggle-nocaret options dropdown-toggle"
                               data-bs-toggle="dropdown">
                                <span class="material-icons-outlined fs-5">more_vert</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="javascript:void(0);" id="add-linked-account">Hesap Ekle</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0)">Another action</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0)">Something else here</a></li>
                            </ul>
                        </div>
                    </div>
                    {% if linkedAccounts is defined and linkedAccounts is iterable %}
                        <div class="account-list d-flex flex-column gap-4" style="max-height:175px; overflow-y: auto">
                            {% for account in linkedAccounts %}
                                <div class="account-list-item d-flex align-items-center gap-3"
                                     data-type="{{ account.identityProviderType }}"
                                     data-user-id="{{ account.identityProviderUserId }}">
                                    <img src="https://cdn.yaka.la/assets/icon/identity-provider/{{ account.identityProviderName|lower }}.ico"
                                         width="35" alt="">
                                    <div class="flex-grow-1">
                                        <label class="mb-0 h6" for="ip-{{ account.identityProviderName|lower }}"
                                        >{{ account.identityProviderName }}</label><p class="mb-0">Events and Reserch</p>
                                    </div>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input ip-input-type ip-checkbox" type="checkbox"
                                               id="ip-{{ account.identityProviderName|lower }}" data-bs-toggle="modal"
                                               data-bs-target="#ip-modal" checked>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}Hiç Bağlı Hesap Bulunmamaktadır.{% endif %}
                </div>
            </div>

        </div>
    </div>
    <!--end row-->

    <!-- Modal -->
    <div class="modal fade" id="ip-modal-initial-structure">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-bottom-0 py-2">
                    <h5 class="modal-title">Modal title</h5>
                    <a href="javascript:;" class="primaery-menu-close" data-bs-dismiss="modal">
                        <i class="material-icons-outlined">close</i>
                    </a>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-grd btn-grd-danger" data-bs-dismiss="modal">İptal Et</button>
                    <button type="button" class="btn btn-grd btn-grd-info modal-success">Onayla</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="validation-modal-initial-structure">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-bottom-0 py-2">
                    <h5 class="modal-title">Modal title</h5>
                    <a href="javascript:;" class="primaery-menu-close" data-bs-dismiss="modal">
                        <i class="material-icons-outlined">close</i>
                    </a>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-grd btn-grd-danger" data-bs-dismiss="modal">İptal Et</button>
                    <button type="button" class="btn btn-grd btn-grd-info modal-success">Onayla</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="ip-modal-add-account">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-bottom-0 py-2"><h5 class="modal-title">Yeni Hesap Ekleyin</h5></div>
                <div class="modal-body text-center">
                    <div class="row container">
                        <div class="col-4 cursor-pointer add-account-symbol" data-type="facebook">
                            <div class="font-22"><i class="lni lni-facebook"></i></div>
                            <div class="ms-2"><span>facebook</span></div>
                        </div>
                        <div class="col-4 cursor-pointer add-account-symbol" data-type="google">
                            <div class="font-22"><i class="lni lni-google"></i></div>
                            <div class="ms-2"><span>google</span></div>
                        </div>
                        <div class="col-4 cursor-pointer add-account-symbol" data-type="applev3">
                            <div class="font-22"><i class="lni lni-apple"></i></div>
                            <div class="ms-2"><span>apple</span></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-top-0 flex-column">
                    <button type="button" class="btn btn-grd btn-grd-danger" data-bs-dismiss="modal">Vazgeç</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('script/modules/otp-module.js') }}"></script>
    <script>window.Twig = {_: JSON.parse('{{ user|json_encode|raw }}'),_xrf: "{{ csrf_token('state_csrf_protection') }}"}</script>
    <script src="{{ asset('script/pages/users/profile.js') }}"></script>
{% endblock %}